<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bcd4"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        tools:text="Healthigyme, hiring android devoloper" />

    <ImageView
        android:id="@+id/img_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_title"
        android:minHeight="150dp" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_event"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
        tools:text="Healthigyme, a health and wellness company" />

    <ImageButton
        android:id="@+id/btn_prev"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_opens_at"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_left" />

    <ImageButton
        android:id="@+id/btn_next"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_prev"
        android:src="@drawable/ic_right" />
    `

    <TextView
        android:id="@+id/txt_opens_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_desc"
        android:text="Opens at"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

    <TextView
        android:id="@+id/txt_closes_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_opens_at"
        android:text="Closes on"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

    <TextView
        android:id="@+id/txt_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_next"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Medium Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <TextView
        android:id="@+id/txt_close_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Medium Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <Button
        android:id="@+id/btn_open"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_prev"
        android:layout_centerHorizontal="true"
        android:text="Open" />

    <TextView
        android:id="@+id/txt_event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_start_date"
        android:layout_centerHorizontal="true"
        android:text="Monthly Challenges"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />
</RelativeLayout>